<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:screenOrientation="portrait"
        android:background="@drawable/tlo">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="368dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="425dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:gravity="right" android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="120dp"
                android:layout_height="50dp">
            <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" android:id="@+id/buttonSettings" android:layout_weight="1"
                    android:background="@drawable/settings"
                    android:layout_marginRight="20dp"/>
            <Button
                    android:layout_width="50dp"
                    android:layout_height="match_parent" android:id="@+id/buttonLogout" android:layout_weight="1"
                    android:background="@drawable/exit"/>
        </LinearLayout>
        <TextView
                android:layout_marginTop="5dp"
                android:text=""
                android:shadowColor="#ffffff"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10.8"
                android:textSize="28sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content" android:id="@+id/loginTextView"
                android:gravity="center"/>
        <TextView
                android:layout_width="match_parent"
                android:shadowColor="#ffffff"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10.8"
                android:textSize="28sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/rounded_border"
                android:gravity="center"
                android:layout_height="50dp" android:id="@+id/textViewKat"/>
        <TextView
                android:background="@drawable/rounded_border"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:shadowColor="#ffffff"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10.8"
                android:textSize="28sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_height="match_parent" android:id="@+id/hasloTextView"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">
        <Button
                android:layout_width="match_parent"
                android:background="@drawable/cube"
                android:id="@+id/buttonDraw" android:layout_weight="1" android:layout_height="match_parent"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>