<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity"
        android:background="@drawable/tlo">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_goneMarginBottom="20dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:shadowColor="#ffffff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.8"
                    android:text="LOGIN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewLoginReg" android:textSize="24sp"
                    android:textColor="@android:color/black" android:textStyle="bold"/>
            <EditText
                    android:shadowColor="#ffffff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextLoginReg" android:textSize="24sp"
                    android:textColor="@android:color/black" android:textStyle="bold"/>
            <TextView
                    android:shadowColor="#ffffff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.8"
                    android:text="HASŁO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewHasloReg" android:textSize="24sp"
                    android:textColor="@android:color/black" android:textStyle="bold"/>
            <EditText
                    android:shadowColor="#ffffff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editTextHasloReg" android:textSize="24sp"
                    android:textColor="@android:color/black" android:textStyle="bold"/>
            <TextView
                    android:shadowColor="#ffffff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.8"
                    android:text="POWTÓRZ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewHaslo2Reg" android:textStyle="bold"
                    android:textColor="@android:color/black" android:textSize="24sp"/>
            <EditText
                    android:shadowColor="#ffffff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.8"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextHaslo2Reg" android:textSize="24sp"
                    android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp"
                android:padding="20dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:visibility="gone"
                    android:textColor="#ff0000"
                    android:shadowColor="#000000"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.8"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" android:id="@+id/errorTextView" android:textSize="18sp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/button_reg"
                    android:layout_marginBottom="15dp"
                    android:layout_height="70dp" tools:layout_editor_absoluteY="307dp"
                    tools:layout_editor_absoluteX="134dp" android:id="@+id/button_register"/>
            <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/button_powrot"
                    android:layout_height="70dp" tools:layout_editor_absoluteY="392dp"
                    tools:layout_editor_absoluteX="134dp" android:id="@+id/button_back"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>