<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        tools:context=".LoginActivity"
        android:background="@drawable/tlo"
        android:weightSum="100" tools:layout_editor_absoluteY="81dp"
        android:screenOrientation="portrait">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.681">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp">
            <TextView
                    android:text="LOGIN"
                    android:shadowColor="#ffffff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewLogin" android:textSize="30sp"
                    android:textStyle="bold" android:textColor="@android:color/black"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#ffffff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.8"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextLogin" android:textSize="30sp" android:textStyle="bold"/>
            <TextView
                    android:text="HASŁO"
                    android:shadowColor="#ffffff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewHaslo" android:textSize="30sp"
                    android:textColor="@android:color/black" android:textStyle="bold"/>
            <EditText
                    android:inputType="textPassword"
                    android:shadowColor="#ffffff"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextHaslo" android:textSize="30sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:textAlignment="center"
                    android:textColor="#ff0000"
                    android:visibility="gone"
                    android:layout_height="wrap_content" android:id="@+id/errorTextView1" android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
            <Button
                    android:background="@drawable/button_log"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="70dp" tools:layout_editor_absoluteY="200dp"
                    tools:layout_editor_absoluteX="0dp" android:id="@+id/button_log"/>
            <Button
                    android:background="@drawable/button_reg"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" tools:layout_editor_absoluteY="376dp"
                    tools:layout_editor_absoluteX="0dp" android:id="@+id/button_reg"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>