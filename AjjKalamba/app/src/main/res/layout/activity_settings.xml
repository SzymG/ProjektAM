<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/tlo"
        android:gravity="center"
        android:padding="25dp"

        android:layout_height="fill_parent" tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
    <TextView
            android:text="DODAJ/USUŃ HASŁO!"
            android:gravity="center"
            android:shadowColor="#ffffff"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10.8"
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kategoria"
            android:inputType="textPersonName"
            android:shadowColor="#ffffff"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10.8"
            android:textSize="25sp"
            android:textColor="#000000"
            android:ems="10"
            android:id="@+id/editKategoria"/>
    <EditText
            android:layout_width="match_parent"
            android:hint="Hasło"
            android:shadowColor="#ffffff"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10.8"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editHaslo"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="10dp">
        <Button
                android:layout_margin="5dp"
                android:background="@drawable/add_button"
                android:layout_width="70dp"
                android:layout_height="match_parent" android:id="@+id/buttonAdd" android:layout_weight="1"/>
        <Button
                android:layout_margin="5dp"
                android:background="@drawable/delete_button"
                android:layout_width="70dp"
                android:layout_height="match_parent" android:id="@+id/buttonDelete" android:layout_weight="1"/>
    </LinearLayout>
    <ListView
            android:layout_height="200dp" android:layout_width="match_parent"
            android:background="@drawable/rounded_border" android:id="@+id/listView"/>

    <Button
            android:layout_marginTop="10dp"
            android:layout_width="275dp"
            android:background="@drawable/button_powrot"
            android:layout_height="70dp" android:id="@+id/buttonPowrot"/>

</LinearLayout>